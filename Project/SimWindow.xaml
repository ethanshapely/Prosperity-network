<Window x:Class="Project.SimWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:graph="clr-namespace:Project.GraphTools"
        mc:Ignorable="d"
        Closing="WindowClose"
        Title="SimWindow" Height="450" Width="800">
    <Grid>
        <graph:CoopGraph LineValue="{Binding NetworkNoCoops, Mode=OneWay}" HorizontalAlignment="Left" Height="250" Margin="10,10,0,0" VerticalAlignment="Top" Width="380"/>
        <graph:ProsperityGraph LineValue="{Binding NetworkProsperity, Mode=OneWay}" HorizontalAlignment="Left" Height="250" Margin="400,173,0,0" VerticalAlignment="Top" Width="380"/>
        <Button Content="Pause" HorizontalAlignment="Left" Margin="44,284,0,0" VerticalAlignment="Top" Height="28" Width="132" Click="PauseButton"/>
    </Grid>
</Window>
